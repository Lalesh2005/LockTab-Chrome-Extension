{
  "manifest_version": 3,
  "name": "Tab Locker (React)",
  "version": "1.0",
  "description": "Lock tabs with a password (Built with React)",
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "assets/lock.js-D7YupPd_.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/lock.js-D7YupPd_.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
